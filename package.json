{
  "name": "fastify-api",
  "version": "1.0.0",
  "main": "src/app.ts",
  "license": "MIT",
  "scripts": {
    "dev": "tsnd --respawn --transpile-only --exit-child src/app.ts",
    "start": "node dist/src/app.js",
    "build": "tsc",
    "test": "dotenv -e .env.test -- npx tap",
    "migrate": "prisma migrate dev --name init",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --name test-init"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^18.7.6",
    "@types/tap": "^15.0.7",
    "dotenv-cli": "^6.0.0",
    "prisma": "^4.2.1",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@fastify/jwt": "^6.3.2",
    "@fastify/swagger": "^7.4.1",
    "@prisma/client": "^4.2.1",
    "bcrypt": "^5.0.1",
    "fastify": "^4.5.0",
    "fastify-zod": "^1.1.0",
    "zod": "^3.18.0"
  },
  "tap": {
    "node-arg": [
      "--require=ts-node/register"
    ]
  }
}
